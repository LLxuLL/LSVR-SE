{
  "girl": {
    "name": "girl",
    "description": "Editing configuration for girl models",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new girl nearby",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "up", "down", "front", "back"],
              "description": "Direction to add the new girl"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the girl model",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 90.0,
              "description": "Rotation angle (degrees)"
            },
            "axis": {
              "type": "list",
              "default": [0, 1, 0],
              "description": "Rotation axis (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": "{axis}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the girl model",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [5, 0, 0],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the girl model uniformly",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.2,
              "description": "Scaling factor"
            },
            "center": {
              "type": "string",
              "default": "center",
              "options": ["origin", "center"],
              "description": "Scaling center"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "become_taller": {
          "description": "Makes the girl taller, as if growing up.",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.2,
              "description": "Vertical growth factor (e.g., 1.2 makes her 20% taller)"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "origin"
              },
              "output": "scale_center"
            },
            {
              "operation": "calculate_non_uniform_scale_vector",
              "parameters": {
                "y_factor": "{factor}"
              },
              "output": "scale_vector"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "scale_vector",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        },
        "twirl": {
          "description": "Makes the girl twirl in place, as if dancing.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 360.0,
              "description": "Twirl angle in degrees (360 for a full spin)"
            }
          },
          "atomic_operations": [
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": [0, 1, 0],
                "pivot": "bounds.center"
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
