{
  "crab": {
    "name": "crab",
    "description": "Crab model editing configuration. Assumed to be lying flat on the XZ plane, facing along the positive X-axis. For specific operations, it is expected to have named parts like 'body', 'left_claw', and 'right_claw'.",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new crab next to the current one.",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "up", "down", "front", "back"],
              "description": "Direction to add the new crab."
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": { "mesh": "input_mesh" },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": { "mesh": "input_mesh" },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate (move) the crab.",
          "parameters": {
            "vector": {
              "type": "list_float",
              "default": [0.0, 0.0, 0.0],
              "description": "Translation vector [x, y, z]."
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the crab on the spot (around its vertical Y-axis).",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 30.0,
              "description": "Turning angle in degrees."
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": [0, 1, 0],
                "center": "center"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the crab to make it larger or smaller.",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.2,
              "description": "Uniform scaling factor."
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "center"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "scuttle": {
          "description": "Moves the crab sideways along its local Z-axis.",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right"],
              "description": "The direction of sideways movement."
            },
            "distance": {
              "type": "float",
              "default": 1.5,
              "description": "The distance to scuttle."
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_sideways_vector",
              "parameters": {
                "direction": "{direction}",
                "distance": "{distance}"
              },
              "output": "scuttle_vector"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "scuttle_vector"
              },
              "output": "result_mesh"
            }
          ]
        },
        "raise_claws": {
          "description": "Raises the crab's claws into a defensive posture.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 45.0,
              "description": "The angle to raise the claws upwards, in degrees."
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_by_part_names",
              "parameters": {
                "mesh": "input_mesh",
                "part_names": ["body", "left_claw", "right_claw"]
              },
              "output": ["body_mesh", "left_claw_mesh", "right_claw_mesh"]
            },
            {
              "operation": "get_part_pivot",
              "parameters": { "mesh": "left_claw_mesh", "pivot_location": "base" },
              "output": "left_pivot"
            },
            {
              "operation": "get_part_pivot",
              "parameters": { "mesh": "right_claw_mesh", "pivot_location": "base" },
              "output": "right_pivot"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "left_claw_mesh",
                "angle": "{angle}",
                "axis": [0, 0, 1],
                "pivot": "left_pivot"
              },
              "output": "raised_left_claw"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "right_claw_mesh",
                "angle": "-{angle}",
                "axis": [0, 0, 1],
                "pivot": "right_pivot"
              },
              "output": "raised_right_claw"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["body_mesh", "raised_left_claw", "raised_right_claw"]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
