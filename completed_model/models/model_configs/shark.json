{
    "shark": {
        "name": "shark",
        "description": "鲨鱼模型的编辑配置",
        "operations": {
            "common": {
                "add": {
                    "description": "在指定方向上添加一个新的鲨鱼模型",
                    "parameters": {
                        "direction": {
                            "type": "string",
                            "default": "right",
                            "options": ["left", "right", "up", "down", "front", "back"],
                            "description": "添加新模型的方向"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "copy_mesh",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "copied_mesh"
                        },
                        {
                            "operation": "get_bounds",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "bounds"
                        },
                        {
                            "operation": "calculate_translation_vector",
                            "parameters": {
                                "direction": "{direction}",
                                "bounds": "bounds"
                            },
                            "output": "translation"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "copied_mesh",
                                "vector": "translation"
                            },
                            "output": "translated_mesh"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": ["input_mesh", "translated_mesh"]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "rotate": {
                    "description": "围绕中心点旋转整个鲨鱼模型",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 90.0,
                            "description": "旋转角度 (度)"
                        },
                        "axis": {
                            "type": "vector3d",
                            "default": [0, 1, 0],
                            "description": "旋转轴 (例如 [0, 1, 0] 表示Y轴)"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "rotate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "angle": "{angle}",
                                "axis": "{axis}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "scale": {
                    "description": "缩放整个鲨鱼模型",
                    "parameters": {
                        "factor": {
                            "type": "float",
                            "default": 1.5,
                            "description": "缩放因子"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "calculate_scale_center",
                            "parameters": {
                                "mesh": "input_mesh",
                                "center_type": "center"
                            },
                            "output": "scale_center"
                        },
                        {
                            "operation": "scale_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "factor": "{factor}",
                                "center": "scale_center"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "translate": {
                    "description": "平移整个鲨鱼模型",
                    "parameters": {
                        "vector": {
                            "type": "vector3d",
                            "default": [10, 0, 0],
                            "description": "平移向量"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "vector": "{vector}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            },
            "specific": {
                "open_mouth": {
                    "description": "张开鲨鱼的嘴巴",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 30.0,
                            "description": "下颚张开的角度，负数表示向上"
                        },
                        "jaw_split_ratio": {
                            "type": "float",
                            "default": 0.45,
                            "description": "沿Y轴分割点以分离下颚的比率 (0到1)"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "split_mesh_by_axis",
                            "parameters": {
                                "mesh": "input_mesh",
                                "axis": "Y",
                                "split_point_ratio": "{jaw_split_ratio}"
                            },
                            "output": ["lower_jaw", "upper_body"]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "lower_jaw",
                                "pivot_type": "edge",
                                "edge": "back"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": {
                                "mesh": "lower_jaw",
                                "edge": "back"
                            },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "lower_jaw",
                                "angle": "{angle}",
                                "axis": "rotation_axis",
                                "pivot": "pivot_point"
                            },
                            "output": "opened_jaw"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": ["upper_body", "opened_jaw"]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "bend_tail": {
                    "description": "使鲨鱼的尾巴向侧面弯曲",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 25.0,
                            "description": "尾巴侧向弯曲的角度"
                        },
                        "tail_ratio": {
                            "type": "float",
                            "default": 0.4,
                            "description": "从模型后部算起，作为尾巴部分的比例 (0到1)"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "split_mesh_by_axis",
                            "parameters": {
                                "mesh": "input_mesh",
                                "axis": "X",
                                "split_point_ratio_from_back": "{tail_ratio}"
                            },
                            "output": ["main_body", "tail_section"]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "tail_section",
                                "pivot_type": "edge",
                                "edge": "front"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "tail_section",
                                "angle": "{angle}",
                                "axis": [0, 1, 0],
                                "pivot": "pivot_point"
                            },
                            "output": "bent_tail"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": ["main_body", "bent_tail"]
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            }
        }
    }
}
