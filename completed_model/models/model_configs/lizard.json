{
  "lizard": {
    "name": "lizard",
    "description": "Editing configuration for lizard models",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new lizard nearby",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "up", "down", "front", "back"],
              "description": "Direction to add the new lizard"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the lizard model",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 45.0,
              "description": "Rotation angle (degrees)"
            },
            "axis": {
              "type": "list",
              "default": [0, 1, 0],
              "description": "Rotation axis (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": "{axis}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the lizard model",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [3, 0, 0],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the lizard model uniformly",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.5,
              "description": "Scaling factor"
            },
            "center": {
              "type": "string",
              "default": "center",
              "options": ["origin", "center"],
              "description": "Scaling center"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "curve_body": {
          "description": "Bends the lizard's body and tail into a curve, as if it is turning.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 30.0,
              "description": "The angle to curve the tail section horizontally."
            },
            "tail_ratio": {
              "type": "float",
              "default": 0.5,
              "description": "The proportion of the lizard's length considered as the tail section to be curved."
            }
          },
          "atomic_operations": [
            {
              "operation": "split_mesh_by_axis",
              "parameters": {
                "mesh": "input_mesh",
                "axis": "z",
                "ratio": "{tail_ratio}",
                "from_end": "back"
              },
              "outputs": ["front_body", "tail_section"]
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "tail_section"
              },
              "output": "tail_bounds"
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "bounds": "tail_bounds",
                "edge": "front_center"
              },
              "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "tail_section",
                "angle": "{angle}",
                "axis": [0, 1, 0],
                "pivot": "pivot_point"
              },
              "output": "curved_tail"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["front_body", "curved_tail"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "raise_head": {
          "description": "Tilts the lizard's head upwards, as if looking at something.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 25.0,
              "description": "Angle to tilt the head up in degrees."
            },
            "head_ratio": {
              "type": "float",
              "default": 0.25,
              "description": "The ratio of the lizard's body length that is its head and neck."
            }
          },
          "atomic_operations": [
            {
              "operation": "split_mesh_by_axis",
              "parameters": {
                "mesh": "input_mesh",
                "axis": "z",
                "ratio": "{head_ratio}",
                "from_end": "front"
              },
              "outputs": ["head_mesh", "body_mesh"]
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "head_mesh"
              },
              "output": "head_bounds"
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "bounds": "head_bounds",
                "edge": "bottom_center"
              },
              "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "head_mesh",
                "angle": "{angle}",
                "axis": [1, 0, 0],
                "pivot": "pivot_point"
              },
              "output": "rotated_head"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["body_mesh", "rotated_head"]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
