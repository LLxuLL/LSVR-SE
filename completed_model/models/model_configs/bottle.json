{
    "bottle": {
        "name": "bottle",
        "description": "Bottle model editing configuration",
        "operations": {
            "common": {
                "add": {
                    "description": "Add a new bottle",
                    "parameters": {
                        "direction": {
                            "type": "string",
                            "default": "right",
                            "options": [
                                "left",
                                "right",
                                "up",
                                "down",
                                "front",
                                "back"
                            ],
                            "description": "Add directions"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "copy_mesh",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "copied_mesh"
                        },
                        {
                            "operation": "get_bounds",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "bounds"
                        },
                        {
                            "operation": "calculate_translation_vector",
                            "parameters": {
                                "direction": "{direction}",
                                "bounds": "bounds"
                            },
                            "output": "translation"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "copied_mesh",
                                "vector": "translation"
                            },
                            "output": "translated_mesh"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "input_mesh",
                                    "translated_mesh"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "rotate": {
                    "description": "Rotating model",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 90.0,
                            "description": "Rotation angle (degrees)"
                        },
                        "axis": {
                            "type": "string",
                            "default": "y",
                            "options": [
                                "x",
                                "y",
                                "z"
                            ],
                            "description": "Rotation axis"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "rotate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "angle": "{angle}",
                                "axis": "{axis}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "translate": {
                    "description": "Translation model",
                    "parameters": {
                        "vector": {
                            "type": "array",
                            "default": [
                                0.0,
                                0.0,
                                0.0
                            ],
                            "description": "Translation vector"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "vector": "{vector}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "scale": {
                    "description": "Scaling model",
                    "parameters": {
                        "factor": {
                            "type": "float",
                            "default": 1.0,
                            "description": "Scaling factor"
                        },
                        "center": {
                            "type": "string",
                            "default": "center",
                            "options": [
                                "origin",
                                "center"
                            ],
                            "description": "Zoom Center"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "calculate_scale_center",
                            "parameters": {
                                "mesh": "input_mesh",
                                "center_type": "{center}"
                            },
                            "output": "scale_center"
                        },
                        {
                            "operation": "scale_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "factor": "{factor}",
                                "center": "scale_center"
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            },
            "specific": {
                "unscrew_cap": {
                    "description": "Unscrew and lift the bottle cap.",
                    "parameters": {
                        "revolutions": {
                            "type": "float",
                            "default": 2.0,
                            "description": "Number of full rotations to unscrew."
                        },
                        "lift_distance": {
                            "type": "float",
                            "default": 0.1,
                            "description": "Distance to lift the cap vertically (relative to model size)."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "separate_extraction",
                            "parameters": { "mesh": "input_mesh", "region": "cap" },
                            "output": [ "body_mesh", "cap_mesh" ]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": { "mesh": "cap_mesh", "pivot_type": "center" },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": { "mesh": "cap_mesh", "axis_type": "vertical_axis" },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "calculate_translation_vector",
                            "parameters": { "direction": "up", "distance": "{lift_distance}" },
                            "output": "lift_vector"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": { "mesh": "cap_mesh", "angle": "360 * {revolutions}", "pivot": "pivot_point", "axis": "rotation_axis" },
                            "output": "rotated_cap"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": { "mesh": "rotated_cap", "vector": "lift_vector" },
                            "output": "unscrewed_cap"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": { "meshes": [ "body_mesh", "unscrewed_cap" ] },
                            "output": "result_mesh"
                        }
                    ]
                },
                "pour": {
                    "description": "Tilt the bottle to a pouring angle.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 120.0,
                            "description": "The angle to tilt the bottle for pouring."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": { "mesh": "input_mesh", "pivot_type": "base_center" },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": { "mesh": "input_mesh", "axis_type": "horizontal_axis" },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": { "mesh": "input_mesh", "angle": "{angle}", "pivot": "pivot_point", "axis": "rotation_axis" },
                            "output": "result_mesh"
                        }
                    ]
                },
                "squeeze": {
                    "description": "Squeeze the body of a plastic bottle.",
                    "parameters": {
                        "factor": {
                            "type": "float",
                            "default": 0.8,
                            "description": "Squeeze factor (e.g., 0.8 means 80% of original width)."
                        },
                        "axis": {
                            "type": "string",
                            "default": "x",
                            "options": [ "x", "z" ],
                            "description": "The axis along which to squeeze."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "separate_extraction",
                            "parameters": { "mesh": "input_mesh", "region": "squeezable_body" },
                            "output": [ "rigid_parts", "body_mesh" ]
                        },
                        {
                            "operation": "calculate_squeeze_vector",
                            "parameters": { "axis": "{axis}", "factor": "{factor}" },
                            "output": "scale_vector"
                        },
                        {
                            "operation": "calculate_scale_center",
                            "parameters": { "mesh": "body_mesh", "center_type": "center" },
                            "output": "scale_center"
                        },
                        {
                            "operation": "scale_mesh",
                            "parameters": { "mesh": "body_mesh", "factor": "scale_vector", "center": "scale_center" },
                            "output": "squeezed_body"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": { "meshes": [ "rigid_parts", "squeezed_body" ] },
                            "output": "result_mesh"
                        }
                    ]
                }
            }
        }
    }
}
