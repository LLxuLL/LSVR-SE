{
  "mushroom": {
    "name": "mushroom",
    "description": "Editing configuration for mushroom models",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new mushroom nearby",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "front", "back"],
              "description": "Direction to add the new mushroom"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the mushroom model",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 45.0,
              "description": "Rotation angle (degrees)"
            },
            "axis": {
              "type": "list",
              "default": [0, 1, 0],
              "description": "Rotation axis (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": "{axis}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the mushroom model",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [2, 0, 0],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the mushroom model uniformly (grow)",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.5,
              "description": "Scaling factor"
            },
            "center": {
              "type": "string",
              "default": "origin",
              "options": ["origin", "center"],
              "description": "Scaling center (origin lets it grow from its base)"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "tilt_cap": {
          "description": "Tilts the cap of the mushroom.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 25.0,
              "description": "The angle to tilt the cap, in degrees."
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_extraction",
              "parameters": {
                "mesh": "input_mesh",
                "part_name": "cap"
              },
              "outputs": ["cap_mesh", "stem_mesh"]
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "cap_mesh"
              },
              "output": "cap_bounds"
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "bounds": "cap_bounds",
                "edge": "bottom_center"
              },
              "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "cap_mesh",
                "angle": "{angle}",
                "axis": [1, 0, 0],
                "pivot": "pivot_point"
              },
              "output": "tilted_cap"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["stem_mesh", "tilted_cap"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "start_glowing": {
          "description": "Makes the mushroom's cap emit a bioluminescent glow.",
          "parameters": {
            "color": {
              "type": "string",
              "default": "cyan",
              "options": ["cyan", "lime_green", "purple"],
              "description": "The color of the glow."
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_extraction",
              "parameters": {
                "mesh": "input_mesh",
                "part_name": "cap"
              },
              "outputs": ["cap_mesh", "stem_mesh"]
            },
            {
              "operation": "recolor_mesh",
              "parameters": {
                "mesh": "cap_mesh",
                "color_preset": "{color}",
                "effect": "glow"
              },
              "output": "glowing_cap"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["stem_mesh", "glowing_cap"]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
