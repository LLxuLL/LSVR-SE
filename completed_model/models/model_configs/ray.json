{
  "ray": {
    "name": "ray",
    "description": "Editing configuration for ray models (e.g., stingray, manta ray)",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new ray to form a fever (a group of rays)",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "front",
              "options": ["left", "right", "front", "back"],
              "description": "Direction to add the new ray"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the ray in the water",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 20.0,
              "description": "Rotation angle (degrees) around its vertical axis"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": [0, 1, 0]
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the ray model (glide through water)",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [0, 0, 5],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the ray model",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.25,
              "description": "Uniform scaling factor"
            },
            "center": {
              "type": "string",
              "default": "center",
              "options": ["origin", "center"],
              "description": "Scaling center"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "swim": {
          "description": "Simulates the ray's graceful swimming motion by flapping its large pectoral fins.",
          "parameters": {
            "speed": {
              "type": "float",
              "default": 1.0,
              "description": "The speed of the flapping animation."
            }
          },
          "atomic_operations": [
            {
              "operation": "perform_animation",
              "parameters": {
                "mesh": "input_mesh",
                "animation_name": "swim",
                "speed_multiplier": "{speed}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "sting_attack": {
          "description": "Whips the tail forward in a defensive stinging motion.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 90.0,
              "description": "The forward angle to whip the tail over the body."
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_extraction",
              "parameters": {
                "mesh": "input_mesh",
                "part_name": "tail"
              },
              "outputs": ["tail_mesh", "body_mesh"]
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "mesh": "tail_mesh",
                "pivot_type": "tail_base"
              },
              "output": "tail_pivot"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "tail_mesh",
                "pivot": "tail_pivot",
                "angle": "{angle}",
                "axis": [1, 0, 0]
              },
              "output": "whipped_tail"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["body_mesh", "whipped_tail"]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
