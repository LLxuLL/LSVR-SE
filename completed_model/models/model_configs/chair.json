{
    "chair": {
        "name": "chair",
        "description": "Chair model editing configuration",
        "operations": {
            "common": {
                "add": {
                    "description": "Add a new chair",
                    "parameters": {
                        "direction": {
                            "type": "string",
                            "default": "right",
                            "options": [
                                "left",
                                "right",
                                "up",
                                "down",
                                "front",
                                "back"
                            ],
                            "description": "Add directions"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "copy_mesh",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "copied_mesh"
                        },
                        {
                            "operation": "get_bounds",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "bounds"
                        },
                        {
                            "operation": "calculate_translation_vector",
                            "parameters": {
                                "direction": "{direction}",
                                "bounds": "bounds"
                            },
                            "output": "translation"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "copied_mesh",
                                "vector": "translation"
                            },
                            "output": "translated_mesh"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "input_mesh",
                                    "translated_mesh"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "rotate": {
                    "description": "Rotating model",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 90.0,
                            "description": "Rotation angle (degrees)"
                        },
                        "axis": {
                            "type": "string",
                            "default": "y",
                            "options": [
                                "x",
                                "y",
                                "z"
                            ],
                            "description": "Rotation axis"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "rotate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "angle": "{angle}",
                                "axis": "{axis}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "translate": {
                    "description": "Translation model",
                    "parameters": {
                        "vector": {
                            "type": "array",
                            "default": [
                                0.0,
                                0.0,
                                0.0
                            ],
                            "description": "Translation vector"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "vector": "{vector}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "scale": {
                    "description": "Scaling model",
                    "parameters": {
                        "factor": {
                            "type": "float",
                            "default": 1.0,
                            "description": "Scaling factor"
                        },
                        "center": {
                            "type": "string",
                            "default": "center",
                            "options": [
                                "origin",
                                "center"
                            ],
                            "description": "Zoom Center"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "calculate_scale_center",
                            "parameters": {
                                "mesh": "input_mesh",
                                "center_type": "{center}"
                            },
                            "output": "scale_center"
                        },
                        {
                            "operation": "scale_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "factor": "{factor}",
                                "center": "scale_center"
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            },
            "specific": {
                "recline_backrest": {
                    "description": "Recline the backrest of the chair.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 15.0,
                            "description": "The angle to recline the backrest."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "separate_extraction",
                            "parameters": { "mesh": "input_mesh", "region": "backrest" },
                            "output": [ "chair_base", "backrest_mesh" ]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": { "mesh": "backrest_mesh", "pivot_type": "base_hinge" },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": { "mesh": "backrest_mesh", "axis_type": "horizontal_axis" },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": { "mesh": "backrest_mesh", "angle": "{angle}", "pivot": "pivot_point", "axis": "rotation_axis" },
                            "output": "reclined_backrest"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": { "meshes": [ "chair_base", "reclined_backrest" ] },
                            "output": "result_mesh"
                        }
                    ]
                },
                "adjust_seat_height": {
                    "description": "Adjust the height of the chair seat.",
                    "parameters": {
                        "height_change": {
                            "type": "float",
                            "default": 0.1,
                            "description": "The amount to raise (positive) or lower (negative) the seat."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "separate_extraction",
                            "parameters": { "mesh": "input_mesh", "region": "seat_assembly" },
                            "output": [ "base_mesh", "seat_mesh" ]
                        },
                        {
                            "operation": "calculate_translation_vector",
                            "parameters": { "direction": "up", "distance": "{height_change}" },
                            "output": "lift_vector"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": { "mesh": "seat_mesh", "vector": "lift_vector" },
                            "output": "adjusted_seat"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": { "meshes": [ "base_mesh", "adjusted_seat" ] },
                            "output": "result_mesh"
                        }
                    ]
                },
                "swivel_seat": {
                    "description": "Swivel the seat of an office chair.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 45.0,
                            "description": "The angle to swivel the seat."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "separate_extraction",
                            "parameters": { "mesh": "input_mesh", "region": "seat_assembly" },
                            "output": [ "base_mesh", "seat_mesh" ]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": { "mesh": "seat_mesh", "pivot_type": "center_post" },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": { "axis_type": "vertical_axis" },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": { "mesh": "seat_mesh", "angle": "{angle}", "pivot": "pivot_point", "axis": "rotation_axis" },
                            "output": "swiveled_seat"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": { "meshes": [ "base_mesh", "swiveled_seat" ] },
                            "output": "result_mesh"
                        }
                    ]
                }
            }
        }
    }
}
