{
    "bear": {
        "name": "bear",
        "description": "Bear model editing configuration",
        "operations": {
            "common": {
                "add": {
                    "description": "Add a new bear",
                    "parameters": {
                        "direction": {
                            "type": "string",
                            "default": "right",
                            "options": [
                                "left",
                                "right",
                                "up",
                                "down",
                                "front",
                                "back"
                            ],
                            "description": "Add directions"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "copy_mesh",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "copied_mesh"
                        },
                        {
                            "operation": "get_bounds",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "bounds"
                        },
                        {
                            "operation": "calculate_translation_vector",
                            "parameters": {
                                "direction": "{direction}",
                                "bounds": "bounds"
                            },
                            "output": "translation"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "copied_mesh",
                                "vector": "translation"
                            },
                            "output": "translated_mesh"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "input_mesh",
                                    "translated_mesh"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "rotate": {
                    "description": "Rotating model",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 90.0,
                            "description": "Rotation angle (degrees)"
                        },
                        "axis": {
                            "type": "string",
                            "default": "y",
                            "options": [
                                "x",
                                "y",
                                "z"
                            ],
                            "description": "Rotation axis"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "rotate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "angle": "{angle}",
                                "axis": "{axis}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "translate": {
                    "description": "Translation model",
                    "parameters": {
                        "vector": {
                            "type": "array",
                            "default": [
                                0.0,
                                0.0,
                                0.0
                            ],
                            "description": "Translation vector"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "vector": "{vector}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "scale": {
                    "description": "Scaling model",
                    "parameters": {
                        "factor": {
                            "type": "float",
                            "default": 1.0,
                            "description": "Scaling factor"
                        },
                        "center": {
                            "type": "string",
                            "default": "center",
                            "options": [
                                "origin",
                                "center"
                            ],
                            "description": "Zoom Center"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "calculate_scale_center",
                            "parameters": {
                                "mesh": "input_mesh",
                                "center_type": "{center}"
                            },
                            "output": "scale_center"
                        },
                        {
                            "operation": "scale_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "factor": "{factor}",
                                "center": "scale_center"
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            },
            "specific": {
                "raise_arm": {
                    "description": "Raise the bear's arm",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 90.0,
                            "description": "Rotation angle for arm (degrees)"
                        },
                        "side": {
                            "type": "string",
                            "default": "left",
                            "options": [
                                "left",
                                "right"
                            ],
                            "description": "Which arm to raise"
                        },
                        "arm_ratio": {
                            "type": "float",
                            "default": 0.2,
                            "description": "Ratio of arm to body"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "extract_submesh_by_ratio",
                            "parameters": {
                                "mesh": "input_mesh",
                                "ratio": "{arm_ratio}",
                                "based_on": "arm_section",
                                "side": "{side}"
                            },
                            "output": "arm_mesh"
                        },
                        {
                            "operation": "extract_inverse_submesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "reference": "arm_mesh"
                            },
                            "output": "body_mesh"
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "arm_mesh",
                                "pivot_type": "shoulder",
                                "side": "{side}"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": {
                                "mesh": "arm_mesh",
                                "axis_type": "shoulder_axis"
                            },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "arm_mesh",
                                "angle": "{angle}",
                                "pivot": "pivot_point",
                                "axis": "rotation_axis"
                            },
                            "output": "raised_arm"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "body_mesh",
                                    "raised_arm"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "turn_head": {
                    "description": "Turn the bear's head",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 45.0,
                            "description": "Rotation angle for head (degrees)"
                        },
                        "direction": {
                            "type": "string",
                            "default": "left",
                            "options": [
                                "left",
                                "right"
                            ],
                            "description": "Turn direction"
                        },
                        "head_ratio": {
                            "type": "float",
                            "default": 0.15,
                            "description": "Ratio of head to body"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "extract_submesh_by_ratio",
                            "parameters": {
                                "mesh": "input_mesh",
                                "ratio": "{head_ratio}",
                                "based_on": "head_section"
                            },
                            "output": "head_mesh"
                        },
                        {
                            "operation": "extract_inverse_submesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "reference": "head_mesh"
                            },
                            "output": "body_mesh"
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "head_mesh",
                                "pivot_type": "neck"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": {
                                "mesh": "head_mesh",
                                "axis_type": "vertical"
                            },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "adjust_angle_by_direction",
                            "parameters": {
                                "angle": "{angle}",
                                "direction": "{direction}"
                            },
                            "output": "final_angle"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "head_mesh",
                                "angle": "final_angle",
                                "pivot": "pivot_point",
                                "axis": "rotation_axis"
                            },
                            "output": "turned_head"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "body_mesh",
                                    "turned_head"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "sit_down": {
                    "description": "Make the bear sit down",
                    "parameters": {
                        "leg_bend_angle": {
                            "type": "float",
                            "default": 90.0,
                            "description": "Bend angle for legs (degrees)"
                        },
                        "leg_ratio": {
                            "type": "float",
                            "default": 0.3,
                            "description": "Ratio of legs to body"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "extract_submesh_by_ratio",
                            "parameters": {
                                "mesh": "input_mesh",
                                "ratio": "{leg_ratio}",
                                "based_on": "lower_body"
                            },
                            "output": "legs_mesh"
                        },
                        {
                            "operation": "extract_inverse_submesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "reference": "legs_mesh"
                            },
                            "output": "upper_body_mesh"
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "legs_mesh",
                                "pivot_type": "hip"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": {
                                "mesh": "legs_mesh",
                                "axis_type": "horizontal"
                            },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "legs_mesh",
                                "angle": "{leg_bend_angle}",
                                "pivot": "pivot_point",
                                "axis": "rotation_axis"
                            },
                            "output": "bent_legs"
                        },
                        {
                            "operation": "adjust_position_after_rotation",
                            "parameters": {
                                "mesh": "bent_legs",
                                "reference": "upper_body_mesh"
                            },
                            "output": "adjusted_legs"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "upper_body_mesh",
                                    "adjusted_legs"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "stand_up": {
                    "description": "Make the bear stand up from sitting",
                    "parameters": {
                        "leg_straighten_angle": {
                            "type": "float",
                            "default": 0.0,
                            "description": "Straighten angle for legs (degrees)"
                        },
                        "leg_ratio": {
                            "type": "float",
                            "default": 0.3,
                            "description": "Ratio of legs to body"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "extract_submesh_by_ratio",
                            "parameters": {
                                "mesh": "input_mesh",
                                "ratio": "{leg_ratio}",
                                "based_on": "lower_body"
                            },
                            "output": "legs_mesh"
                        },
                        {
                            "operation": "extract_inverse_submesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "reference": "legs_mesh"
                            },
                            "output": "upper_body_mesh"
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "legs_mesh",
                                "pivot_type": "hip"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": {
                                "mesh": "legs_mesh",
                                "axis_type": "horizontal"
                            },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "legs_mesh",
                                "angle": "{leg_straighten_angle}",
                                "pivot": "pivot_point",
                                "axis": "rotation_axis"
                            },
                            "output": "straight_legs"
                        },
                        {
                            "operation": "reset_mesh_position",
                            "parameters": {
                                "mesh": "straight_legs",
                                "reference": "upper_body_mesh"
                            },
                            "output": "reset_legs"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "upper_body_mesh",
                                    "reset_legs"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            }
        }
    }
}
