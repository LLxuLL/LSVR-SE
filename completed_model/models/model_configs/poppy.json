{
  "poppy": {
    "name": "poppy",
    "description": "Editing configuration for poppy flower models",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new poppy nearby to create a field",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "front", "back"],
              "description": "Direction to add the new poppy"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the poppy flower",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 25.0,
              "description": "Rotation angle (degrees) around its stem (Y-axis)"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": [0, 1, 0]
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the poppy model",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [2, 0, 0],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the poppy model (make it grow)",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.1,
              "description": "Scaling factor"
            },
            "center": {
              "type": "string",
              "default": "origin",
              "options": ["origin", "center"],
              "description": "Scaling center (origin is best for growing from the base)"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "bloom": {
          "description": "Makes the poppy's petals open from a closed bud state.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 60.0,
              "description": "The angle to open the petals."
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_extraction",
              "parameters": {
                "mesh": "input_mesh",
                "part_name": "petals"
              },
              "outputs": ["petals_mesh", "plant_body_mesh"]
            },
            {
              "operation": "unfurl_petals",
              "parameters": {
                "mesh": "petals_mesh",
                "angle": "{angle}"
              },
              "output": "bloomed_petals"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["plant_body_mesh", "bloomed_petals"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "sway_in_breeze": {
          "description": "Gently bends the poppy's stem as if swaying in a breeze.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 10.0,
              "description": "The angle of the bend from the vertical axis."
            }
          },
          "atomic_operations": [
            {
              "operation": "bend_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": [0, 0, 1]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
