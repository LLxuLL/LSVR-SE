{
  "forest": {
    "name": "forest",
    "description": "Editing configuration for forest models",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new forest area",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "up", "down", "front", "back"],
              "description": "Direction to add the new forest"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the forest model",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 90.0,
              "description": "Rotation angle (degrees)"
            },
            "axis": {
              "type": "list",
              "default": [0, 1, 0],
              "description": "Rotation axis (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": "{axis}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the forest model",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [10, 0, 0],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the forest model",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.5,
              "description": "Scaling factor"
            },
            "center": {
              "type": "string",
              "default": "center",
              "options": ["origin", "center"],
              "description": "Scaling center"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "change_density": {
          "description": "Change forest density by randomly adding or removing trees",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.2,
              "description": "Density change factor; >1.0 increases density, <1.0 decreases density"
            }
          },
          "atomic_operations": [
            {
              "operation": "split_mesh_by_connectivity",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "tree_meshes"
            },
            {
              "operation": "resample_mesh_list",
              "parameters": {
                "meshes": "tree_meshes",
                "factor": "{factor}"
              },
              "output": "resampled_trees"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": "resampled_trees"
              },
              "output": "result_mesh"
            }
          ]
        },
        "grow_taller": {
          "description": "Make the trees in the forest taller without changing their width or depth",
          "parameters": {
            "growth_factor": {
              "type": "float",
              "default": 1.2,
              "description": "Vertical growth factor (e.g., 1.2 means 20% taller)"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "origin"
              },
              "output": "scale_center"
            },
            {
              "operation": "calculate_non_uniform_scale_vector",
              "parameters": {
                "y_factor": "{growth_factor}"
              },
              "output": "scale_vector"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "scale_vector",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
