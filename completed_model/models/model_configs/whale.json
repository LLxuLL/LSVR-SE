{
    "whale": {
        "name": "whale",
        "description": "Editing configuration for the Whale model",
        "operations": {
            "common": {
                "add": {
                    "description": "Add another whale to create a pod",
                    "parameters": {
                        "direction": {
                            "type": "string",
                            "default": "right",
                            "options": ["left", "right", "front", "back"],
                            "description": "Direction to add the new whale"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "copy_mesh",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "copied_mesh"
                        },
                        {
                            "operation": "get_bounds",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "bounds"
                        },
                        {
                            "operation": "calculate_translation_vector",
                            "parameters": {
                                "direction": "{direction}",
                                "bounds": "bounds"
                            },
                            "output": "translation"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "copied_mesh",
                                "vector": "translation"
                            },
                            "output": "translated_mesh"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": ["input_mesh", "translated_mesh"]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "rotate": {
                    "description": "Rotate the entire whale",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 10.0,
                            "description": "Rotation angle (in degrees)"
                        },
                        "axis": {
                            "type": "vector3d",
                            "default": [0, 1, 0],
                            "description": "Axis of rotation (Y-axis)"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "rotate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "angle": "{angle}",
                                "axis": "{axis}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "scale": {
                    "description": "Scale the entire whale model uniformly",
                    "parameters": {
                        "factor": {
                            "type": "float",
                            "default": 1.2,
                            "description": "Scaling factor"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "calculate_scale_center",
                            "parameters": {
                                "mesh": "input_mesh",
                                "center_type": "origin"
                            },
                            "output": "scale_center"
                        },
                        {
                            "operation": "scale_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "factor": "{factor}",
                                "center": "scale_center"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "translate": {
                    "description": "Move the entire whale's position",
                    "parameters": {
                        "vector": {
                            "type": "vector3d",
                            "default": [5, 0, 0],
                            "description": "Translation vector"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "vector": "{vector}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            },
            "specific": {
                "flex_fluke": {
                    "description": "Bend the whale's tail (fluke) up or down to simulate a swimming stroke.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": -20.0,
                            "description": "The angle to bend the tail. Negative for up, positive for down."
                        },
                        "bend_point_ratio": {
                            "type": "float",
                            "default": 0.7,
                            "description": "Ratio along the body (front to back) where the bend begins."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "split_mesh_by_axis",
                            "parameters": {
                                "mesh": "input_mesh",
                                "axis": "X",
                                "split_point_ratio": "{bend_point_ratio}"
                            },
                            "output": ["main_body", "tail_section"]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "tail_section",
                                "pivot_type": "edge",
                                "edge": "front"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "tail_section",
                                "angle": "{angle}",
                                "axis": [0, 0, 1],
                                "pivot": "pivot_point"
                            },
                            "output": "flexed_tail"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": ["main_body", "flexed_tail"]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "breach": {
                    "description": "Make the whale breach the surface of the water.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": -60.0,
                            "description": "The steep angle of the whale's body as it jumps."
                        },
                        "height": {
                            "type": "float",
                            "default": 10.0,
                            "description": "The vertical height of the jump."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "input_mesh",
                                "pivot_type": "center"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "input_mesh",
                                "angle": "{angle}",
                                "axis": [0, 0, 1],
                                "pivot": "pivot_point"
                            },
                            "output": "angled_whale"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "angled_whale",
                                "vector": [0, "{height}", 0]
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            }
        }
    }
}
