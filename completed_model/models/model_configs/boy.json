{
    "boy": {
        "name": "boy",
        "description": "Boy character model editing configuration",
        "operations": {
            "common": {
                "add": {
                    "description": "Add a new boy",
                    "parameters": {
                        "direction": {
                            "type": "string",
                            "default": "right",
                            "options": [
                                "left",
                                "right",
                                "up",
                                "down",
                                "front",
                                "back"
                            ],
                            "description": "Add directions"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "copy_mesh",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "copied_mesh"
                        },
                        {
                            "operation": "get_bounds",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "bounds"
                        },
                        {
                            "operation": "calculate_translation_vector",
                            "parameters": {
                                "direction": "{direction}",
                                "bounds": "bounds"
                            },
                            "output": "translation"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "copied_mesh",
                                "vector": "translation"
                            },
                            "output": "translated_mesh"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "input_mesh",
                                    "translated_mesh"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "rotate": {
                    "description": "Rotating model",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 90.0,
                            "description": "Rotation angle (degrees)"
                        },
                        "axis": {
                            "type": "string",
                            "default": "y",
                            "options": [
                                "x",
                                "y",
                                "z"
                            ],
                            "description": "Rotation axis"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "rotate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "angle": "{angle}",
                                "axis": "{axis}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "translate": {
                    "description": "Translation model",
                    "parameters": {
                        "vector": {
                            "type": "array",
                            "default": [
                                0.0,
                                0.0,
                                0.0
                            ],
                            "description": "Translation vector"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "vector": "{vector}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "scale": {
                    "description": "Scaling model",
                    "parameters": {
                        "factor": {
                            "type": "float",
                            "default": 1.0,
                            "description": "Scaling factor"
                        },
                        "center": {
                            "type": "string",
                            "default": "center",
                            "options": [
                                "origin",
                                "center"
                            ],
                            "description": "Zoom Center"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "calculate_scale_center",
                            "parameters": {
                                "mesh": "input_mesh",
                                "center_type": "{center}"
                            },
                            "output": "scale_center"
                        },
                        {
                            "operation": "scale_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "factor": "{factor}",
                                "center": "scale_center"
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            },
            "specific": {
                "wave_hand": {
                    "description": "Make the boy wave his hand.",
                    "parameters": {
                        "hand": {
                            "type": "string",
                            "default": "right",
                            "options": [ "left", "right" ],
                            "description": "Which hand to wave."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "separate_extraction",
                            "parameters": { "mesh": "input_mesh", "region": "{hand}_arm" },
                            "output": [ "body_mesh", "arm_mesh" ]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": { "mesh": "arm_mesh", "pivot_type": "shoulder_joint" },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": { "mesh": "arm_mesh", "axis_type": "wave_axis" },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": { "mesh": "arm_mesh", "angle": 75.0, "pivot": "pivot_point", "axis": "rotation_axis" },
                            "output": "waved_arm"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": { "meshes": [ "body_mesh", "waved_arm" ] },
                            "output": "result_mesh"
                        }
                    ]
                },
                "kick": {
                    "description": "Make the boy perform a kicking motion.",
                    "parameters": {
                        "leg": {
                            "type": "string",
                            "default": "right",
                            "options": [ "left", "right" ],
                            "description": "Which leg to kick with."
                        },
                        "angle": {
                            "type": "float",
                            "default": 60.0,
                            "description": "The forward angle of the kick."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "separate_extraction",
                            "parameters": { "mesh": "input_mesh", "region": "{leg}_leg" },
                            "output": [ "body_mesh", "leg_mesh" ]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": { "mesh": "leg_mesh", "pivot_type": "hip_joint" },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": { "mesh": "leg_mesh", "axis_type": "horizontal_axis" },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": { "mesh": "leg_mesh", "angle": "{angle}", "pivot": "pivot_point", "axis": "rotation_axis" },
                            "output": "kicked_leg"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": { "meshes": [ "body_mesh", "kicked_leg" ] },
                            "output": "result_mesh"
                        }
                    ]
                },
                "turn_head": {
                    "description": "Turn the boy's head.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 45.0,
                            "description": "Angle to turn the head."
                        },
                        "direction": {
                            "type": "string",
                            "default": "left",
                            "options": [ "left", "right" ],
                            "description": "Direction to turn."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "separate_extraction",
                            "parameters": { "mesh": "input_mesh", "region": "head" },
                            "output": [ "body_mesh", "head_mesh" ]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": { "mesh": "head_mesh", "pivot_type": "neck_base" },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": { "mesh": "head_mesh", "axis_type": "vertical_axis" },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "adjust_angle_by_direction",
                            "parameters": { "angle": "{angle}", "direction": "{direction}" },
                            "output": "final_angle"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": { "mesh": "head_mesh", "angle": "final_angle", "pivot": "pivot_point", "axis": "rotation_axis" },
                            "output": "turned_head"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": { "meshes": [ "body_mesh", "turned_head" ] },
                            "output": "result_mesh"
                        }
                    ]
                }
            }
        }
    }
}
