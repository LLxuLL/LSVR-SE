{
  "motorcycle": {
    "name": "motorcycle",
    "description": "Editing configuration for motorcycle models",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new motorcycle nearby",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "front", "back"],
              "description": "Direction to add the new motorcycle"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the motorcycle model",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 45.0,
              "description": "Rotation angle (degrees)"
            },
            "axis": {
              "type": "list",
              "default": [0, 1, 0],
              "description": "Rotation axis (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": "{axis}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the motorcycle model",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [5, 0, 0],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the motorcycle model uniformly",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.1,
              "description": "Scaling factor"
            },
            "center": {
              "type": "string",
              "default": "center",
              "options": ["origin", "center"],
              "description": "Scaling center"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "turn_handlebars": {
          "description": "Turns the front wheel and handlebars.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 30.0,
              "description": "The angle to turn the handlebars in degrees."
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_extraction",
              "parameters": {
                "mesh": "input_mesh",
                "part_name": "front_assembly"
              },
              "outputs": ["front_assembly_mesh", "main_frame_mesh"]
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "front_assembly_mesh"
              },
              "output": "front_assembly_bounds"
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "bounds": "front_assembly_bounds",
                "edge": "top_center"
              },
              "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "front_assembly_mesh",
                "angle": "{angle}",
                "axis": [0, 1, 0],
                "pivot": "pivot_point"
              },
              "output": "turned_assembly"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["main_frame_mesh", "turned_assembly"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "do_a_wheelie": {
          "description": "Lifts the front wheel off the ground into a wheelie pose.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": -30.0,
              "description": "The angle to raise the front of the motorcycle (negative for upward tilt around X-axis)."
            }
          },
          "atomic_operations": [
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bike_bounds"
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "bounds": "bike_bounds",
                "edge": "bottom_back"
              },
              "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": [1, 0, 0],
                "pivot": "pivot_point"
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
