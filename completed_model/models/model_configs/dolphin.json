{
  "dolphin": {
    "name": "dolphin",
    "description": "Dolphin model editing configuration. Assumed to be swimming horizontally along the positive X-axis. For specific operations, it is expected to have named parts like 'body' and 'tail'.",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new dolphin next to the current one.",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "up", "down", "front", "back"],
              "description": "Direction to add the new dolphin."
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": { "mesh": "input_mesh" },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": { "mesh": "input_mesh" },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate (move) the dolphin.",
          "parameters": {
            "vector": {
              "type": "list_float",
              "default": [0.0, 0.0, 0.0],
              "description": "Translation vector [x, y, z]."
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the dolphin to change its swimming direction (around its vertical Y-axis).",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 20.0,
              "description": "Turning angle in degrees."
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": [0, 1, 0],
                "center": "center"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the dolphin to make it larger or smaller.",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.1,
              "description": "Uniform scaling factor."
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "center"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "leap": {
          "description": "Makes the dolphin perform a leap, arching its body.",
          "parameters": {
            "height": {
              "type": "float",
              "default": 2.0,
              "description": "The vertical height of the leap."
            },
            "angle": {
              "type": "float",
              "default": 30.0,
              "description": "The arching angle of the body during the leap."
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": [0, "{height}", 0]
              },
              "output": "lifted_dolphin"
            },
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "lifted_dolphin",
                "angle": "-{angle}",
                "axis": [0, 0, 1],
                "center": "center"
              },
              "output": "result_mesh"
            }
          ]
        },
        "tail_slap": {
          "description": "Flips the dolphin's tail fluke up or down.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 35.0,
              "description": "The angle to flip the tail, in degrees."
            },
            "direction": {
              "type": "string",
              "default": "up",
              "options": ["up", "down"],
              "description": "The direction of the tail slap."
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_by_part_names",
              "parameters": {
                "mesh": "input_mesh",
                "part_names": ["body", "tail"]
              },
              "output": ["body_mesh", "tail_mesh"]
            },
            {
              "operation": "get_part_pivot",
              "parameters": { "mesh": "tail_mesh", "pivot_location": "base" },
              "output": "tail_pivot"
            },
            {
              "operation": "adjust_angle_by_direction",
              "parameters": {
                "angle": "{angle}",
                "direction": "{direction}",
                "positive_dir": "up"
              },
              "output": "final_angle"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "tail_mesh",
                "angle": "final_angle",
                "axis": [0, 0, 1],
                "pivot": "tail_pivot"
              },
              "output": "flipped_tail"
            },
            {
              "operation": "combine_meshes",
              "parameters": { "meshes": ["body_mesh", "flipped_tail"] },
              "output": "result_mesh"
            }
          ]
        },
        "barrel_roll": {
          "description": "Performs a spin along its body's longitudinal axis.",
          "parameters": {
            "revolutions": {
              "type": "float",
              "default": 1.0,
              "description": "Number of full 360-degree rotations."
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "({revolutions} * 360)",
                "axis": [1, 0, 0],
                "center": "center"
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
