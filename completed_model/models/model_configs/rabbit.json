{
  "rabbit": {
    "name": "rabbit",
    "description": "Editing configuration for rabbit models",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new rabbit to form a fluffle (a group of rabbits)",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "front", "back"],
              "description": "Direction to add the new rabbit"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the rabbit model",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 30.0,
              "description": "Rotation angle (degrees) around its vertical axis"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": [0, 1, 0]
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the rabbit model (scamper around)",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [2, 0, 0],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the rabbit model (from baby to adult)",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.5,
              "description": "Uniform scaling factor"
            },
            "center": {
              "type": "string",
              "default": "origin",
              "options": ["origin", "center"],
              "description": "Scaling center (origin is best for growing from the ground)"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "hop": {
          "description": "Simulates the rabbit's characteristic hopping motion.",
          "parameters": {},
          "atomic_operations": [
            {
              "operation": "perform_animation",
              "parameters": {
                "mesh": "input_mesh",
                "animation_name": "hop"
              },
              "output": "result_mesh"
            }
          ]
        },
        "nibble": {
          "description": "Makes the rabbit lower its head to nibble on the ground.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 30.0,
              "description": "The downward angle to tilt the head."
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_extraction",
              "parameters": {
                "mesh": "input_mesh",
                "part_name": "head"
              },
              "outputs": ["head_mesh", "body_mesh"]
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "mesh": "head_mesh",
                "pivot_type": "neck_joint"
              },
              "output": "neck_pivot"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "head_mesh",
                "pivot": "neck_pivot",
                "angle": "{angle}",
                "axis": [0, 1, 0]
              },
              "output": "lowered_head"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["body_mesh", "lowered_head"]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
