{
  "rose": {
    "name": "rose",
    "description": "Editing configuration for rose models",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new rose to form a bouquet",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "front", "back"],
              "description": "Direction to add the new rose"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the rose, perhaps in a vase",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 30.0,
              "description": "Rotation angle (degrees) around its stem"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": [0, 1, 0]
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the rose",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [0.5, 0, 0],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the rose model (e.g., from bud to mature flower)",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.2,
              "description": "Uniform scaling factor"
            },
            "center": {
              "type": "string",
              "default": "origin",
              "options": ["origin", "center"],
              "description": "Scaling center, 'origin' helps simulate growing from the ground"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "bloom": {
          "description": "Makes the rose petals unfurl from a bud to a full bloom.",
          "parameters": {
            "intensity": {
              "type": "float",
              "default": 1.0,
              "description": "The intensity or completeness of the bloom animation."
            }
          },
          "atomic_operations": [
            {
              "operation": "perform_animation",
              "parameters": {
                "mesh": "input_mesh",
                "animation_name": "bloom",
                "intensity": "{intensity}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "wilt": {
          "description": "Makes the rose head and petals droop as it wilts.",
          "parameters": {
            "droop_angle": {
              "type": "float",
              "default": 45.0,
              "description": "The downward angle to make the flower head droop."
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_extraction",
              "parameters": {
                "mesh": "input_mesh",
                "part_name": "flower_head"
              },
              "outputs": ["head_mesh", "stem_mesh"]
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "mesh": "head_mesh",
                "pivot_type": "flower_base"
              },
              "output": "head_pivot"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "head_mesh",
                "pivot": "head_pivot",
                "angle": "{droop_angle}",
                "axis": [1, 0, 0]
              },
              "output": "wilted_head"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["stem_mesh", "wilted_head"]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
