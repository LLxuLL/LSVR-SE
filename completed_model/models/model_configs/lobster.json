{
  "lobster": {
    "name": "lobster",
    "description": "Editing configuration for lobster models",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new lobster nearby",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "up", "down", "front", "back"],
              "description": "Direction to add the new lobster"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the lobster model",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 45.0,
              "description": "Rotation angle (degrees)"
            },
            "axis": {
              "type": "list",
              "default": [0, 1, 0],
              "description": "Rotation axis (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": "{axis}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the lobster model",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [5, 0, 0],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the lobster model uniformly",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.3,
              "description": "Scaling factor"
            },
            "center": {
              "type": "string",
              "default": "center",
              "options": ["origin", "center"],
              "description": "Scaling center"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "raise_claws": {
          "description": "Raises the lobster's claws into a defensive or threatening pose.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 45.0,
              "description": "The angle to raise the claws upwards in degrees."
            },
            "claw_ratio": {
              "type": "float",
              "default": 0.3,
              "description": "The proportion of the lobster's length that is considered the claws."
            }
          },
          "atomic_operations": [
            {
              "operation": "split_mesh_by_axis",
              "parameters": {
                "mesh": "input_mesh",
                "axis": "z",
                "ratio": "{claw_ratio}",
                "from_end": "front"
              },
              "outputs": ["claws_mesh", "body_mesh"]
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "claws_mesh"
              },
              "output": "claws_bounds"
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "bounds": "claws_bounds",
                "edge": "back_center"
              },
              "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "claws_mesh",
                "angle": "{angle}",
                "axis": [1, 0, 0],
                "pivot": "pivot_point"
              },
              "output": "raised_claws"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["body_mesh", "raised_claws"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "curl_tail": {
          "description": "Curls the lobster's tail under its body, as in for rapid backward movement.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": -60.0,
              "description": "The angle to curl the tail under the body (negative for downward curl)."
            },
            "tail_ratio": {
              "type": "float",
              "default": 0.4,
              "description": "The proportion of the lobster's body length considered the tail."
            }
          },
          "atomic_operations": [
            {
              "operation": "split_mesh_by_axis",
              "parameters": {
                "mesh": "input_mesh",
                "axis": "z",
                "ratio": "{tail_ratio}",
                "from_end": "back"
              },
              "outputs": ["body_mesh", "tail_mesh"]
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "tail_mesh"
              },
              "output": "tail_bounds"
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "bounds": "tail_bounds",
                "edge": "front_center"
              },
              "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "tail_mesh",
                "angle": "{angle}",
                "axis": [1, 0, 0],
                "pivot": "pivot_point"
              },
              "output": "curled_tail"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["body_mesh", "curled_tail"]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
