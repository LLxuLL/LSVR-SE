{
  "man": {
    "name": "man",
    "description": "Editing configuration for human models",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new man nearby",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "up", "down", "front", "back"],
              "description": "Direction to add the new man"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the man model",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 30.0,
              "description": "Rotation angle (degrees)"
            },
            "axis": {
              "type": "list",
              "default": [0, 1, 0],
              "description": "Rotation axis (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": "{axis}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the man model",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [2, 0, 0],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the man model uniformly",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.1,
              "description": "Scaling factor"
            },
            "center": {
              "type": "string",
              "default": "center",
              "options": ["origin", "center"],
              "description": "Scaling center"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "wave_hand": {
          "description": "Raises one arm to wave.",
          "parameters": {
            "side": {
              "type": "string",
              "default": "right",
              "options": ["left", "right"],
              "description": "Which arm to wave."
            },
            "angle": {
              "type": "float",
              "default": 90.0,
              "description": "The angle to raise the arm upwards from the shoulder."
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_extraction",
              "parameters": {
                "mesh": "input_mesh",
                "part_name": "{side}_arm"
              },
              "outputs": ["arm_mesh", "body_mesh"]
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "arm_mesh"
              },
              "output": "arm_bounds"
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "bounds": "arm_bounds",
                "edge": "top_center"
              },
              "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "arm_mesh",
                "angle": "{angle}",
                "axis": [1, 0, 0],
                "pivot": "pivot_point"
              },
              "output": "waved_arm"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["body_mesh", "waved_arm"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "take_a_step": {
          "description": "Moves one leg forward into a stepping or lunge pose.",
          "parameters": {
            "side": {
              "type": "string",
              "default": "right",
              "options": ["left", "right"],
              "description": "Which leg to move forward."
            },
            "angle": {
              "type": "float",
              "default": 45.0,
              "description": "The angle to swing the leg forward from the hip."
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_extraction",
              "parameters": {
                "mesh": "input_mesh",
                "part_name": "{side}_leg"
              },
              "outputs": ["leg_mesh", "body_mesh"]
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "leg_mesh"
              },
              "output": "leg_bounds"
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "bounds": "leg_bounds",
                "edge": "top_center"
              },
              "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "leg_mesh",
                "angle": "{angle}",
                "axis": [1, 0, 0],
                "pivot": "pivot_point"
              },
              "output": "moved_leg"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["body_mesh", "moved_leg"]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
