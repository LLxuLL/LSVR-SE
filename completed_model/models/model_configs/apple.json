{
  "apple": {
    "name": "apple",
    "description": "Apple model editing configuration",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new apple",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "up", "down", "front", "back"],
              "description": "Add directions"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotating apple",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 45.0,
              "description": "Rotation angle"
            },
            "pivot": {
              "type": "string",
              "default": "center",
              "options": ["center", "stem", "bottom"],
              "description": "Rotate the pivot point"
            },
            "axis": {
              "type": "string",
              "default": "y",
              "options": ["x", "y", "z"],
              "description": "Rotary axis"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "mesh": "input_mesh",
                "pivot_type": "{pivot}"
              },
              "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": "{axis}",
                "pivot": "pivot_point"
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translation apple",
          "parameters": {
            "vector": {
              "type": "vector3",
              "default": [0.0, 0.0, 0.0],
              "description": "Translation vector"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scaling apple",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.0,
              "description": "Scaling factor"
            },
            "center": {
              "type": "string",
              "default": "center",
              "options": ["origin", "center"],
              "description": "Zoom Center"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "cut_apple": {
          "description": "Cut apple into halves",
          "parameters": {
            "cut_plane": {
              "type": "string",
              "default": "vertical",
              "options": ["vertical", "horizontal"],
              "description": "Cut plane orientation"
            },
            "cut_position": {
              "type": "float",
              "default": 0.5,
              "description": "Position of cut (0-1)"
            }
          },
          "atomic_operations": [
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "split_mesh_by_axis",
              "parameters": {
                "mesh": "input_mesh",
                "axis": "{cut_plane}",
                "ratio": "{cut_position}"
              },
              "output": ["half1", "half2"]
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "half1",
                "vector": [0.1, 0, 0]
              },
              "output": "moved_half1"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "half2",
                "vector": [-0.1, 0, 0]
              },
              "output": "moved_half2"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["moved_half1", "moved_half2"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "peel_apple": {
          "description": "Peel apple skin",
          "parameters": {
            "peel_thickness_ratio": {
              "type": "float",
              "default": 0.05,
              "description": "Peel thickness ratio"
            }
          },
          "atomic_operations": [
            {
              "operation": "extract_submesh_by_ratio",
              "parameters": {
                "mesh": "input_mesh",
                "ratio": 0.95,
                "frame_thickness_ratio": "{peel_thickness_ratio}",
                "based_on": "largest_face"
              },
              "output": "peeled_apple"
            },
            {
              "operation": "extract_inverse_submesh",
              "parameters": {
                "mesh": "input_mesh",
                "reference": "peeled_apple"
              },
              "output": "apple_skin"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "apple_skin",
                "vector": [0, 0.2, 0]
              },
              "output": "moved_skin"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["peeled_apple", "moved_skin"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "add_stem": {
          "description": "Add stem to apple",
          "parameters": {
            "stem_size_ratio": {
              "type": "float",
              "default": 0.1,
              "description": "Stem size ratio to apple"
            }
          },
          "atomic_operations": [
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "create_cylinder",
              "parameters": {
                "height": "bounds.size.y * {stem_size_ratio}",
                "radius": "bounds.size.x * {stem_size_ratio} * 0.1",
                "position": [0, "bounds.max.y", 0]
              },
              "output": "stem_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "stem_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "change_color": {
          "description": "Change apple color",
          "parameters": {
            "color": {
              "type": "vector3",
              "default": [1.0, 0.0, 0.0],
              "description": "New color (RGB)"
            }
          },
          "atomic_operations": [
            {
              "operation": "apply_color",
              "parameters": {
                "mesh": "input_mesh",
                "color": "{color}"
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}