{
    "beetle": {
        "name": "beetle",
        "description": "Beetle model editing configuration",
        "operations": {
            "common": {
                "add": {
                    "description": "Add a new beetle",
                    "parameters": {
                        "direction": {
                            "type": "string",
                            "default": "right",
                            "options": [
                                "left",
                                "right",
                                "up",
                                "down",
                                "front",
                                "back"
                            ],
                            "description": "Add directions"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "copy_mesh",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "copied_mesh"
                        },
                        {
                            "operation": "get_bounds",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "bounds"
                        },
                        {
                            "operation": "calculate_translation_vector",
                            "parameters": {
                                "direction": "{direction}",
                                "bounds": "bounds"
                            },
                            "output": "translation"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "copied_mesh",
                                "vector": "translation"
                            },
                            "output": "translated_mesh"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "input_mesh",
                                    "translated_mesh"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "rotate": {
                    "description": "Rotating model",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 90.0,
                            "description": "Rotation angle (degrees)"
                        },
                        "axis": {
                            "type": "string",
                            "default": "y",
                            "options": [
                                "x",
                                "y",
                                "z"
                            ],
                            "description": "Rotation axis"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "rotate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "angle": "{angle}",
                                "axis": "{axis}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "translate": {
                    "description": "Translation model",
                    "parameters": {
                        "vector": {
                            "type": "array",
                            "default": [
                                0.0,
                                0.0,
                                0.0
                            ],
                            "description": "Translation vector"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "vector": "{vector}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "scale": {
                    "description": "Scaling model",
                    "parameters": {
                        "factor": {
                            "type": "float",
                            "default": 1.0,
                            "description": "Scaling factor"
                        },
                        "center": {
                            "type": "string",
                            "default": "center",
                            "options": [
                                "origin",
                                "center"
                            ],
                            "description": "Zoom Center"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "calculate_scale_center",
                            "parameters": {
                                "mesh": "input_mesh",
                                "center_type": "{center}"
                            },
                            "output": "scale_center"
                        },
                        {
                            "operation": "scale_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "factor": "{factor}",
                                "center": "scale_center"
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            },
            "specific": {
                "open_wings": {
                    "description": "Open the beetle's elytra (hard wing covers) for flight.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 60.0,
                            "description": "The angle to open the elytra."
                        },
                        "elytra_ratio": {
                            "type": "float",
                            "default": 0.4,
                            "description": "Ratio of the elytra to the whole body."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "extract_submesh_by_ratio",
                            "parameters": {
                                "mesh": "input_mesh",
                                "ratio": "{elytra_ratio}",
                                "based_on": "elytra_section"
                            },
                            "output": "elytra_mesh"
                        },
                        {
                            "operation": "extract_inverse_submesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "reference": "elytra_mesh"
                            },
                            "output": "body_mesh"
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "elytra_mesh",
                                "pivot_type": "elytra_base"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": {
                                "mesh": "elytra_mesh",
                                "axis_type": "elytra_hinge"
                            },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "elytra_mesh",
                                "angle": "{angle}",
                                "pivot": "pivot_point",
                                "axis": "rotation_axis"
                            },
                            "output": "opened_elytra"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "body_mesh",
                                    "opened_elytra"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "tuck_legs": {
                    "description": "Tuck the beetle's legs for a defensive or resting pose.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 75.0,
                            "description": "Angle to tuck the legs inwards."
                        },
                        "leg_ratio": {
                            "type": "float",
                            "default": 0.2,
                            "description": "Ratio of the legs to the body."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "extract_submesh_by_ratio",
                            "parameters": {
                                "mesh": "input_mesh",
                                "ratio": "{leg_ratio}",
                                "based_on": "legs_section"
                            },
                            "output": "legs_mesh"
                        },
                        {
                            "operation": "extract_inverse_submesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "reference": "legs_mesh"
                            },
                            "output": "body_mesh"
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "legs_mesh",
                                "pivot_type": "hip_joints"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": {
                                "mesh": "legs_mesh",
                                "axis_type": "leg_tuck"
                            },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "legs_mesh",
                                "angle": "{angle}",
                                "pivot": "pivot_point",
                                "axis": "rotation_axis"
                            },
                            "output": "tucked_legs"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "body_mesh",
                                    "tucked_legs"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "move_antennae": {
                    "description": "Move the beetle's antennae.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 25.0,
                            "description": "Angle to move the antennae."
                        },
                        "direction": {
                            "type": "string",
                            "default": "forward",
                            "options": ["forward", "backward", "apart"],
                            "description": "Direction to move the antennae."
                        },
                        "antennae_ratio": {
                            "type": "float",
                            "default": 0.05,
                            "description": "Ratio of the antennae to the body."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "extract_submesh_by_ratio",
                            "parameters": {
                                "mesh": "input_mesh",
                                "ratio": "{antennae_ratio}",
                                "based_on": "antennae_section"
                            },
                            "output": "antennae_mesh"
                        },
                        {
                            "operation": "extract_inverse_submesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "reference": "antennae_mesh"
                            },
                            "output": "body_mesh"
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "antennae_mesh",
                                "pivot_type": "antennae_base"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": {
                                "mesh": "antennae_mesh",
                                "axis_type": "{direction}"
                            },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "antennae_mesh",
                                "angle": "{angle}",
                                "pivot": "pivot_point",
                                "axis": "rotation_axis"
                            },
                            "output": "moved_antennae"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "body_mesh",
                                    "moved_antennae"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            }
        }
    }
}
