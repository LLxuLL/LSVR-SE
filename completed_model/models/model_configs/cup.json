{
  "cup": {
    "name": "cup",
    "description": "Cup model editing configuration. Assumed to be upright, centered at the origin, with its base on the XZ plane. May or may not have a handle.",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new cup next to the current one.",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "up", "down", "front", "back"],
              "description": "Direction to add the new cup."
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": { "mesh": "input_mesh" },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": { "mesh": "input_mesh" },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate (move) the cup.",
          "parameters": {
            "vector": {
              "type": "list_float",
              "default": [0.0, 0.0, 0.0],
              "description": "Translation vector [x, y, z]."
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the cup around its central vertical axis.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 45.0,
              "description": "Turning angle in degrees."
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": [0, 1, 0],
                "center": "center"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the cup to make it larger or smaller.",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.25,
              "description": "Uniform scaling factor."
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "center"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "tip_over": {
          "description": "Tips the cup over 90 degrees onto its side.",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "forward",
              "options": ["forward", "backward", "left", "right"],
              "description": "The direction to tip the cup over."
            }
          },
          "atomic_operations": [
            {
              "operation": "get_pivot_from_bounds",
              "parameters": {
                "mesh": "input_mesh",
                "location": "bottom_edge",
                "direction": "{direction}"
              },
              "output": "pivot_point"
            },
            {
              "operation": "calculate_rotation_axis",
              "parameters": { "direction": "{direction}" },
              "output": "rotation_axis"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "input_mesh",
                "angle": 90.0,
                "axis": "rotation_axis",
                "pivot": "pivot_point"
              },
              "output": "result_mesh"
            }
          ]
        },
        "fill": {
          "description": "Fills the cup by adding a colored liquid mesh inside.",
          "parameters": {
            "level": {
              "type": "float",
              "default": 85.0,
              "description": "The fill level percentage (0-100)."
            },
            "liquid_color": {
              "type": "list_float",
              "default": [0.7, 0.4, 0.1],
              "description": "RGB color of the liquid (e.g., for coffee)."
            }
          },
          "atomic_operations": [
            {
              "operation": "create_liquid_mesh",
              "parameters": {
                "container_mesh": "input_mesh",
                "fill_level": "{level}",
                "color": "{liquid_color}"
              },
              "output": "liquid_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "liquid_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
