{
  "window": {
    "name": "window",
    "description": "Window model editing configuration",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new window",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "up", "down", "front", "back"],
              "description": "Add directions"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotating model",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 45.0,
              "description": "Rotation angle"
            },
            "pivot": {
              "type": "string",
              "default": "center",
              "options": ["center", "left", "right", "top", "bottom"],
              "description": "Rotate the pivot point"
            },
            "axis": {
              "type": "string",
              "default": "z",
              "options": ["x", "y", "z"],
              "description": "Rotary axis"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "mesh": "input_mesh",
                "pivot_type": "{pivot}"
              },
              "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": "{axis}",
                "pivot": "pivot_point"
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translation model",
          "parameters": {
            "vector": {
              "type": "vector3",
              "default": [0.0, 0.0, 0.0],
              "description": "Translation vector"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scaling model",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.0,
              "description": "Scaling factor"
            },
            "center": {
              "type": "string",
              "default": "center",
              "options": ["origin", "center"],
              "description": "Zoom Center"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "open_window": {
          "description": "旋转窗户",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 90.0,
              "description": "窗户开启角度"
            },
            "pivot_edge": {
              "type": "string",
              "default": "left",
              "options": ["left", "right", "top", "bottom"],
              "description": "旋转边缘"
            },
            "direction": {
              "type": "string",
              "default": "outward",
              "options": ["inward", "outward"],
              "description": "窗户开启方向"
            },
            "sash_ratio": {
              "type": "float",
              "default": 0.9,
              "description": "窗扇与窗户的比例"
            },
            "frame_thickness_ratio": {
              "type": "float",
              "default": 0.05,
              "description": "窗框厚度比例"
            }
          },
          "atomic_operations": [
            {
              "operation": "separate_extraction",
              "parameters": {
                "mesh": "input_mesh",
                "ratio": "{sash_ratio}",
                "frame_thickness_ratio": "{frame_thickness_ratio}",
                "based_on": "largest_face"
              },
              "output": ["frame_mesh", "sash_mesh"]
            },
            {
              "operation": "align_sash_to_frame",
              "parameters": {
                "sash_mesh": "sash_mesh",
                "frame_mesh": "frame_mesh",
                "edge": "{pivot_edge}"
              },
              "output": "aligned_sash"
            },
            {
              "operation": "calculate_pivot_point",
              "parameters": {
                "mesh": "aligned_sash",
                "pivot_type": "edge",
                "edge": "{pivot_edge}",
                "frame_thickness_ratio": "{frame_thickness_ratio}"
              },
              "output": "pivot_point"
            },
            {
              "operation": "calculate_rotation_axis",
              "parameters": {
                "mesh": "aligned_sash",
                "edge": "{pivot_edge}"
              },
              "output": "rotation_axis"
            },
            {
              "operation": "adjust_angle_by_direction",
              "parameters": {
                "angle": "{angle}",
                "direction": "{direction}"
              },
              "output": "final_angle"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "aligned_sash",
                "angle": "{final_angle}",
                "axis": "rotation_axis",
                "pivot": "pivot_point"
              },
              "output": "rotated_sash"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["frame_mesh", "rotated_sash"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "slide_open_window": {
          "description": "Pan open the window",
          "parameters": {
            "percent_open": {
              "type": "float",
              "default": 80.0,
              "description": "Percentage of fenestrations"
            },
            "sash_ratio": {
              "type": "float",
              "default": 0.9,
              "description": "Sash to window ratio"
            },
            "frame_thickness_ratio": {
              "type": "float",
              "default": 0.05,
              "description": "Window frame thickness ratio"
            }
          },
          "atomic_operations": [
            {
              "operation": "extract_submesh_by_ratio",
              "parameters": {
                "mesh": "input_mesh",
                "ratio": "{sash_ratio}",
                "frame_thickness_ratio": "{frame_thickness_ratio}",
                "based_on": "largest_face"
              },
              "output": "sash_mesh"
            },
            {
              "operation": "extract_inverse_submesh",
              "parameters": {
                "mesh": "input_mesh",
                "reference": "sash_mesh"
              },
              "output": "frame_mesh"
            },
            {
              "operation": "split_mesh_by_axis",
              "parameters": {
                "mesh": "sash_mesh",
                "axis": "x",
                "ratio": 0.5
              },
              "output": ["left_sash", "right_sash"]
            },
            {
              "operation": "calculate_slide_direction",
              "parameters": {
                "mesh": "sash_mesh",
                "based_on": "largest_face"
              },
              "output": "slide_direction"
            },
            {
              "operation": "calculate_slide_distance",
              "parameters": {
                "mesh": "sash_mesh",
                "percent": "{percent_open}",
                "based_on": "largest_face"
              },
              "output": "slide_distance"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "left_sash",
                "vector": "slide_direction * slide_distance"
              },
              "output": "moved_left_sash"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["frame_mesh", "right_sash", "moved_left_sash"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "close_window": {
          "description": "Close the windows",
          "parameters": {
            "sash_ratio": {
              "type": "float",
              "default": 0.9,
              "description": "Sash to window ratio"
            },
            "frame_thickness_ratio": {
              "type": "float",
              "default": 0.05,
              "description": "Window frame thickness ratio"
            }
          },
          "atomic_operations": [
            {
              "operation": "extract_submesh_by_ratio",
              "parameters": {
                "mesh": "input_mesh",
                "ratio": "{sash_ratio}",
                "frame_thickness_ratio": "{frame_thickness_ratio}",
                "based_on": "largest_face"
              },
              "output": "sash_mesh"
            },
            {
              "operation": "extract_inverse_submesh",
              "parameters": {
                "mesh": "input_mesh",
                "reference": "sash_mesh"
              },
              "output": "frame_mesh"
            },
            {
              "operation": "reset_mesh_position",
              "parameters": {
                "mesh": "sash_mesh",
                "reference": "input_mesh"
              },
              "output": "closed_sash"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["frame_mesh", "closed_sash"]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}