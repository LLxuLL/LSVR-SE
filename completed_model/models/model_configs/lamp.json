{
  "lamp": {
    "name": "lamp",
    "description": "Editing configuration for lamp models",
    "operations": {
      "common": {
        "add": {
          "description": "Add a new lamp nearby",
          "parameters": {
            "direction": {
              "type": "string",
              "default": "right",
              "options": ["left", "right", "up", "down", "front", "back"],
              "description": "Direction to add the new lamp"
            }
          },
          "atomic_operations": [
            {
              "operation": "copy_mesh",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "copied_mesh"
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "input_mesh"
              },
              "output": "bounds"
            },
            {
              "operation": "calculate_translation_vector",
              "parameters": {
                "direction": "{direction}",
                "bounds": "bounds"
              },
              "output": "translation"
            },
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "copied_mesh",
                "vector": "translation"
              },
              "output": "translated_mesh"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["input_mesh", "translated_mesh"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "rotate": {
          "description": "Rotate the lamp model",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 45.0,
              "description": "Rotation angle (degrees)"
            },
            "axis": {
              "type": "list",
              "default": [0, 1, 0],
              "description": "Rotation axis (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "rotate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "angle": "{angle}",
                "axis": "{axis}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "translate": {
          "description": "Translate the lamp model",
          "parameters": {
            "vector": {
              "type": "list",
              "default": [5, 0, 0],
              "description": "Translation vector (X, Y, Z)"
            }
          },
          "atomic_operations": [
            {
              "operation": "translate_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "vector": "{vector}"
              },
              "output": "result_mesh"
            }
          ]
        },
        "scale": {
          "description": "Scale the lamp model uniformly",
          "parameters": {
            "factor": {
              "type": "float",
              "default": 1.2,
              "description": "Scaling factor"
            },
            "center": {
              "type": "string",
              "default": "center",
              "options": ["origin", "center"],
              "description": "Scaling center"
            }
          },
          "atomic_operations": [
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "input_mesh",
                "center_type": "{center}"
              },
              "output": "scale_center"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "input_mesh",
                "factor": "{factor}",
                "center": "scale_center"
              },
              "output": "result_mesh"
            }
          ]
        }
      },
      "specific": {
        "adjust_head": {
          "description": "Tilts the lamp head to direct light.",
          "parameters": {
            "angle": {
              "type": "float",
              "default": 30.0,
              "description": "Angle to tilt the head in degrees."
            },
            "head_ratio": {
              "type": "float",
              "default": 0.3,
              "description": "The ratio of the lamp's total height that constitutes the head."
            }
          },
          "atomic_operations": [
            {
              "operation": "split_mesh_by_axis",
              "parameters": {
                "mesh": "input_mesh",
                "axis": "y",
                "ratio": "{head_ratio}",
                "from_end": "top"
              },
              "outputs": ["head_mesh", "base_mesh"]
            },
            {
              "operation": "get_bounds",
              "parameters": {
                "mesh": "head_mesh"
              },
              "output": "head_bounds"
            },
            {
                "operation": "calculate_pivot_point",
                "parameters": {
                    "bounds": "head_bounds",
                    "edge": "bottom_center"
                },
                "output": "pivot_point"
            },
            {
              "operation": "rotate_mesh_around_pivot",
              "parameters": {
                "mesh": "head_mesh",
                "angle": "{angle}",
                "axis": [1, 0, 0],
                "pivot": "pivot_point"
              },
              "output": "rotated_head"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["base_mesh", "rotated_head"]
              },
              "output": "result_mesh"
            }
          ]
        },
        "change_shade_size": {
          "description": "Changes the shape of the lampshade, making it wider or narrower.",
          "parameters": {
            "width_factor": {
              "type": "float",
              "default": 1.3,
              "description": "Factor to change the shade's width and depth (e.g., 1.3 makes it 30% wider)."
            },
            "head_ratio": {
              "type": "float",
              "default": 0.3,
              "description": "The ratio of the lamp's total height that constitutes the head/shade."
            }
          },
          "atomic_operations": [
            {
              "operation": "split_mesh_by_axis",
              "parameters": {
                "mesh": "input_mesh",
                "axis": "y",
                "ratio": "{head_ratio}",
                "from_end": "top"
              },
              "outputs": ["head_mesh", "base_mesh"]
            },
            {
              "operation": "calculate_scale_center",
              "parameters": {
                "mesh": "head_mesh",
                "center_type": "center"
              },
              "output": "shade_center"
            },
            {
                "operation": "calculate_non_uniform_scale_vector",
                "parameters": {
                    "x_factor": "{width_factor}",
                    "z_factor": "{width_factor}"
                },
                "output": "scale_vector"
            },
            {
              "operation": "scale_mesh",
              "parameters": {
                "mesh": "head_mesh",
                "factor": "scale_vector",
                "center": "shade_center"
              },
              "output": "scaled_head"
            },
            {
              "operation": "combine_meshes",
              "parameters": {
                "meshes": ["base_mesh", "scaled_head"]
              },
              "output": "result_mesh"
            }
          ]
        }
      }
    }
  }
}
