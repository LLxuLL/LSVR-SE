{
    "butterfly": {
        "name": "butterfly",
        "description": "Butterfly model editing configuration",
        "operations": {
            "common": {
                "add": {
                    "description": "Add a new butterfly",
                    "parameters": {
                        "direction": {
                            "type": "string",
                            "default": "right",
                            "options": [
                                "left",
                                "right",
                                "up",
                                "down",
                                "front",
                                "back"
                            ],
                            "description": "Add directions"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "copy_mesh",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "copied_mesh"
                        },
                        {
                            "operation": "get_bounds",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "bounds"
                        },
                        {
                            "operation": "calculate_translation_vector",
                            "parameters": {
                                "direction": "{direction}",
                                "bounds": "bounds"
                            },
                            "output": "translation"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "copied_mesh",
                                "vector": "translation"
                            },
                            "output": "translated_mesh"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "input_mesh",
                                    "translated_mesh"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "rotate": {
                    "description": "Rotating model",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 90.0,
                            "description": "Rotation angle (degrees)"
                        },
                        "axis": {
                            "type": "string",
                            "default": "y",
                            "options": [
                                "x",
                                "y",
                                "z"
                            ],
                            "description": "Rotation axis"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "rotate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "angle": "{angle}",
                                "axis": "{axis}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "translate": {
                    "description": "Translation model",
                    "parameters": {
                        "vector": {
                            "type": "array",
                            "default": [
                                0.0,
                                0.0,
                                0.0
                            ],
                            "description": "Translation vector"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "vector": "{vector}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "scale": {
                    "description": "Scaling model",
                    "parameters": {
                        "factor": {
                            "type": "float",
                            "default": 1.0,
                            "description": "Scaling factor"
                        },
                        "center": {
                            "type": "string",
                            "default": "center",
                            "options": [
                                "origin",
                                "center"
                            ],
                            "description": "Zoom Center"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "calculate_scale_center",
                            "parameters": {
                                "mesh": "input_mesh",
                                "center_type": "{center}"
                            },
                            "output": "scale_center"
                        },
                        {
                            "operation": "scale_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "factor": "{factor}",
                                "center": "scale_center"
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            },
            "specific": {
                "flap_wings": {
                    "description": "Simulate the flapping motion of the butterfly's wings.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 45.0,
                            "description": "The upward angle for each wing from the horizontal plane."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "separate_extraction",
                            "parameters": { "mesh": "input_mesh", "regions": ["left_wing", "right_wing"] },
                            "output": [ "body_mesh", "left_wing_mesh", "right_wing_mesh" ]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": { "mesh": "left_wing_mesh", "pivot_type": "wing_base" },
                            "output": "left_pivot"
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": { "mesh": "right_wing_mesh", "pivot_type": "wing_base" },
                            "output": "right_pivot"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": { "mesh": "body_mesh", "axis_type": "longitudinal_axis" },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": { "mesh": "left_wing_mesh", "angle": "{angle}", "pivot": "left_pivot", "axis": "rotation_axis" },
                            "output": "flapped_left_wing"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": { "mesh": "right_wing_mesh", "angle": "-{angle}", "pivot": "right_pivot", "axis": "rotation_axis" },
                            "output": "flapped_right_wing"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": { "meshes": [ "body_mesh", "flapped_left_wing", "flapped_right_wing" ] },
                            "output": "result_mesh"
                        }
                    ]
                },
                "perch": {
                    "description": "Position the wings in a closed, perched state (folded up).",
                    "parameters": {},
                    "atomic_operations": [
                        {
                            "operation": "separate_extraction",
                            "parameters": { "mesh": "input_mesh", "regions": ["left_wing", "right_wing"] },
                            "output": [ "body_mesh", "left_wing_mesh", "right_wing_mesh" ]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": { "mesh": "left_wing_mesh", "pivot_type": "wing_base" },
                            "output": "left_pivot"
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": { "mesh": "right_wing_mesh", "pivot_type": "wing_base" },
                            "output": "right_pivot"
                        },
                        {
                            "operation": "calculate_rotation_axis",
                            "parameters": { "mesh": "body_mesh", "axis_type": "longitudinal_axis" },
                            "output": "rotation_axis"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": { "mesh": "left_wing_mesh", "angle": 85.0, "pivot": "left_pivot", "axis": "rotation_axis" },
                            "output": "perched_left_wing"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": { "mesh": "right_wing_mesh", "angle": -85.0, "pivot": "right_pivot", "axis": "rotation_axis" },
                            "output": "perched_right_wing"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": { "meshes": [ "body_mesh", "perched_left_wing", "perched_right_wing" ] },
                            "output": "result_mesh"
                        }
                    ]
                },
                "extend_proboscis": {
                    "description": "Extend or retract the butterfly's proboscis for feeding.",
                    "parameters": {
                        "percent_extended": {
                            "type": "float",
                            "default": 100.0,
                            "description": "How far to extend the proboscis (0 to 100)."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "separate_extraction",
                            "parameters": { "mesh": "input_mesh", "region": "proboscis" },
                            "output": [ "main_body", "proboscis_mesh" ]
                        },
                        {
                            "operation": "uncoil_mesh",
                            "parameters": {
                                "mesh": "proboscis_mesh",
                                "percent": "{percent_extended}"
                            },
                            "output": "extended_proboscis"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": [
                                    "main_body",
                                    "extended_proboscis"
                                ]
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            }
        }
    }
}
