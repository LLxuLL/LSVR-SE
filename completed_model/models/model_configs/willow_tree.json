{
    "willow_tree": {
        "name": "willow_tree",
        "description": "Editing configuration for the Willow Tree model",
        "operations": {
            "common": {
                "add": {
                    "description": "Plant a new willow tree nearby",
                    "parameters": {
                        "direction": {
                            "type": "string",
                            "default": "right",
                            "options": ["left", "right", "front", "back"],
                            "description": "Direction to add the new tree"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "copy_mesh",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "copied_mesh"
                        },
                        {
                            "operation": "get_bounds",
                            "parameters": {
                                "mesh": "input_mesh"
                            },
                            "output": "bounds"
                        },
                        {
                            "operation": "calculate_translation_vector",
                            "parameters": {
                                "direction": "{direction}",
                                "bounds": "bounds"
                            },
                            "output": "translation"
                        },
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "copied_mesh",
                                "vector": "translation"
                            },
                            "output": "translated_mesh"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": ["input_mesh", "translated_mesh"]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "rotate": {
                    "description": "Rotate the entire tree",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 15.0,
                            "description": "Rotation angle (in degrees)"
                        },
                        "axis": {
                            "type": "vector3d",
                            "default": [0, 1, 0],
                            "description": "Axis of rotation (Y-axis)"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "rotate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "angle": "{angle}",
                                "axis": "{axis}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "scale": {
                    "description": "Scale the entire tree model uniformly (represents growth)",
                    "parameters": {
                        "factor": {
                            "type": "float",
                            "default": 1.15,
                            "description": "Scaling factor"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "calculate_scale_center",
                            "parameters": {
                                "mesh": "input_mesh",
                                "center_type": "origin"
                            },
                            "output": "scale_center"
                        },
                        {
                            "operation": "scale_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "factor": "{factor}",
                                "center": "scale_center"
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "translate": {
                    "description": "Move the entire tree's position",
                    "parameters": {
                        "vector": {
                            "type": "vector3d",
                            "default": [3, 0, 0],
                            "description": "Translation vector"
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "translate_mesh",
                            "parameters": {
                                "mesh": "input_mesh",
                                "vector": "{vector}"
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            },
            "specific": {
                "sway_branches": {
                    "description": "Make the willow's branches sway gently as if in a breeze.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": 10.0,
                            "description": "The angle to sway the branches."
                        },
                        "trunk_height_ratio": {
                            "type": "float",
                            "default": 0.3,
                            "description": "The vertical ratio separating the trunk from the canopy."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "split_mesh_by_axis",
                            "parameters": {
                                "mesh": "input_mesh",
                                "axis": "Y",
                                "split_point_ratio": "{trunk_height_ratio}"
                            },
                            "output": ["trunk", "canopy"]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "canopy",
                                "pivot_type": "edge",
                                "edge": "bottom"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "canopy",
                                "angle": "{angle}",
                                "axis": [0, 0, 1],
                                "pivot": "pivot_point"
                            },
                            "output": "swayed_canopy"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": ["trunk", "swayed_canopy"]
                            },
                            "output": "result_mesh"
                        }
                    ]
                },
                "bend_trunk": {
                    "description": "Make the entire tree lean or bend from a point on its trunk.",
                    "parameters": {
                        "angle": {
                            "type": "float",
                            "default": -15.0,
                            "description": "The angle to bend the trunk."
                        },
                        "bend_point_ratio": {
                            "type": "float",
                            "default": 0.2,
                            "description": "The vertical height ratio where the bend will occur."
                        }
                    },
                    "atomic_operations": [
                        {
                            "operation": "split_mesh_by_axis",
                            "parameters": {
                                "mesh": "input_mesh",
                                "axis": "Y",
                                "split_point_ratio": "{bend_point_ratio}"
                            },
                            "output": ["tree_base", "upper_section"]
                        },
                        {
                            "operation": "calculate_pivot_point",
                            "parameters": {
                                "mesh": "upper_section",
                                "pivot_type": "edge",
                                "edge": "bottom"
                            },
                            "output": "pivot_point"
                        },
                        {
                            "operation": "rotate_mesh_around_pivot",
                            "parameters": {
                                "mesh": "upper_section",
                                "angle": "{angle}",
                                "axis": [0, 0, 1],
                                "pivot": "pivot_point"
                            },
                            "output": "bent_upper_section"
                        },
                        {
                            "operation": "combine_meshes",
                            "parameters": {
                                "meshes": ["tree_base", "bent_upper_section"]
                            },
                            "output": "result_mesh"
                        }
                    ]
                }
            }
        }
    }
}
